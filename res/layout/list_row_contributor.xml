<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/list_row_min_height"
    android:padding="@dimen/list_row_padding"
    tools:ignore="UseCompoundDrawables" >

    <ImageView
        android:id="@+id/list_row_contributor_ivwAvatar"
        android:layout_width="@dimen/list_row_ivwAvatar_size"
        android:layout_height="@dimen/list_row_ivwAvatar_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/list_row_ivwAvatarContentDescription"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/list_row_contributor_tvwLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_row_padding"
        android:layout_toRightOf="@id/list_row_contributor_ivwAvatar"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>
